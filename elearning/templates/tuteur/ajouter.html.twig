{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .container {
            padding: 16px;
            width: 80%;
            border: 1px solid #ccc;
            margin: 24px 0 12px 50px;
        }
        form_container
        {
            width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        span.form_column
        {
            float: left;
            width: 200px;
            text-align: left;
        }

        span.form_label
        {
            width: 50px;
            text-align: right;

        }

        form_row
        {
            font-size: large;
            margin-top: 10px;
            margin-bottom: 5px;
            text-align: left;
            clear: left;
            margin-left: auto;
            margin-right: auto;
        }

    </style>
    <div class="panel panel-primary">

        <div class="panel-body">
            <h2>Ajouter Tuteur</h2>
            <div class="container">
                {{ form_start(form) }}
                <div class="container">
                {{ form_row(form.User,{'label': 'User','attr':{'placeholder': 'Libellé niveau'}}) }}
                </div>
                <div class="container">
                {{ form_row(form.diplome,{'label': 'Diplome','attr':{'placeholder': 'Libellé niveau'}}) }}
                {{ form_row(form.specialite,{'label': 'Spécialité','attr':{'placeholder': 'Description'}}) }}
                {{ form_row(form.grade,{'label': 'Grade','attr':{'placeholder': 'Description'}}) }}
                {{ form_row(form.titulaire,{'label': 'Tutilaire','attr':{'placeholder': 'Titulaire'}}) }}
                </div>
                <div class="container">
                {{ form_row(form.Niveau,{'label': 'Niveaux','attr':{'placeholder': 'Niveaux'}}) }}
                </div>
                <div class="container">
                    {{ form_row(form.Matiere,{'label': 'Matiere','attr':{'placeholder': 'Cours'}}) }}
                </div>
                <button type="submit" class="btn btn-success">Valider</button>
            </div>

        </div>
    </div>





    </div>



    {{ form_end(form) }}

{% endblock %}

