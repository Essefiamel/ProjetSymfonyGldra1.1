{% extends "base.html.twig" %}

{% block body %}

    <style>

        body {

            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            margin: 20px;
        }

        * {
            box-sizing: border-box;
        }

        #myInput {
            background-repeat: no-repeat;
            width: 100%;
            font-size: 16px;
            padding: 12px 20px 12px 40px;
            border: 1px solid #ddd;
            margin-bottom: 12px;


        }
        .main {
            width: 50%;
            margin: 50px auto;
            left: 20px;
            position: relative;
        }

        /* Bootstrap 3 text input with search icon */

        .has-search .form-control-feedback {
            right: 100px;
            left: 0;
            color: #ccc;
        }

        .has-search .form-control {
            padding-right: 12px;
            padding-left: 34px;

        }

    </style>

    <div class="main">

        <!-- Actual search box -->
        <div class="form-group has-feedback has-search">
            <span class="glyphicon glyphicon-search form-control-feedback"></span>
           <!-- <input type="text" id="myInput" onkeyup="myFunction1()" class="form-control" placeholder="Taper ici vos critères">-->
        </div>

    </div>
    <table id="myTable" class="table" border="1">
        <thead class="thead-dark">

        {% for msg in app.flashes('notice') %}
            {{msg}}
        {% endfor %}

        <tr>

            <th> Id-Cours</th>
            <th> Libéllé</th>
            <th> Optionnel</th>
            <th> Description</th>
            <th>  Editer</th>

        </tr>
        </thead>

        <tbody>

        {% for matiere in lesMatieres %}
            <tr>
                <td>{{matiere.id}}</td>
                <td>{{matiere.libelle}}</td>
                <td>{{matiere.optionelle}}</td>
                <td>{{matiere.description}}</td>
                <td>
                    <a class="btn btn-info" style="background-color: #565656;border-color: #565656" href="{{path('EditerMatiereLink',{id: matiere.id})}}" ><i class="fa fa-pencil fa-fw" aria-hidden="true"></i>&nbsp;   </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun cours</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
